    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tipsLeft = document.querySelector('.tips-container.left');
            const tipsRight = document.querySelector('.tips-container.right');
            const storySection = document.querySelector('.story-section');

            window.addEventListener('scroll', function() {
                const storySectionTop = storySection.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;

                // כשהמשתמש מגיע לאזור הסיפור
                if (storySectionTop <= windowHeight * 0.5) {
                    tipsLeft.classList.add('show');
                    tipsRight.classList.add('show');
                } else {
                    tipsLeft.classList.remove('show');
                    tipsRight.classList.remove('show');
                }
            });
        });

        // להוסיף לסקריפט הקיים
        function animateCounter(counter) {
            const target = +counter.getAttribute('data-target');
            const count = +counter.innerText;
            const increment = target / 200;

            if (count < target) {
                counter.innerText = Math.ceil(count + increment);
                setTimeout(() => animateCounter(counter), 1);
            } else {
                counter.innerText = target;
            }
        }

        const observerCallback = (entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const counters = entry.target.querySelectorAll('.counter');
                    counters.forEach(counter => animateCounter(counter));
                }
            });
        };

        const achievementsSection = document.querySelector('.achievements-section');
        const observer = new IntersectionObserver(observerCallback, { threshold: 0.5 });
        observer.observe(achievementsSection);
    </script>
</body>
</html>
